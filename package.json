{
	"name": "translater",
	"version": "0.8.5",
	"license": "MIT",
	"author": "chergav",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "NODE_ENV=production vite build",
		"preview": "vite preview",
		"prepack:crx": "yarn build",
		"pack:crx": "crx3 dist/chrome --crxURL https://raw.githubusercontent.com/chergav/translater/master/extension/translater-$npm_package_version.crx -p extension/translater.pem -x extension/translater.xml -o extension/translater-$npm_package_version.crx",
		"postpack:crx": "node utils/delete-update_url-manifest.js && cd dist/chrome && zip -FSr ../../extension/translater-ms-$npm_package_version.zip ./",
		"prepack:zip": "FIREFOX=true yarn build && node utils/clean-manifest-for-ff.js",
		"pack:zip": "web-ext build -o -s dist/firefox -a extension -n translater-ff-$npm_package_version.zip",
		"postpack:zip": "zip -FSr extension/translater-src-for-amo-$npm_package_version.zip ./ -x '.git/*' 'dist/*' 'docs/*' 'extension/*' 'node_modules/*'",
		"pack:all": "yarn pack:crx && yarn pack:zip"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.2.6"
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^2.0.0-beta.17",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@tailwindcss/forms": "^0.5.3",
		"autoprefixer": "^10.4.14",
		"crx3": "^1.1.3",
		"eslint": "^8.39.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"node-fetch": "^3.3.1",
		"postcss": "^8.4.23",
		"svelte": "^3.58.0",
		"tailwindcss": "^3.3.1",
		"vite": "^4.3.1",
		"web-ext": "^7.6.1"
	}
}
